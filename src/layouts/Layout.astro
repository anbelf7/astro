---
import { ViewTransitions } from "astro:transitions";
import HeaderTest from "@components/HeaderTest.astro";
import FooterTest from "@components/FooterTest.astro";

const { title = "Title" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>

  <body
    class="grid min-h-screen grid-rows-[auto,1fr,auto] scroll-smooth bg-zinc-50 text-slate-800"
  >
    <HeaderTest />
    <slot />
    <FooterTest />

    <script>
      import "@scripts/menu.js";
    </script>
  </body>
</html>
